#!/bin/sh
UIDFIX="${SUDO_UID:-1000}"

# Clean X locks
rm -f /tmp/.X0-lock 2>/dev/null || true
rm -rf /tmp/.X11-unix 2>/dev/null || true
mkdir -p /tmp/.X11-unix && chmod 1777 /tmp/.X11-unix

# Repair logind runtime dir ownership if needed
if [ -d "/run/user/${UIDFIX}" ]; then
  chown -R "${UIDFIX}:${UIDFIX}" "/run/user/${UIDFIX}" 2>/dev/null || true
fi
exit 0
